<h1>Blog</h1>

{% for post in site.posts %}
  <div class="mb-8">
    <a href="{{ post.url }}" class="text-lg hover:text-red-500">{{ post.title }}</a>
    <div>{{ post.summary }}</div>
    <div class="text-gray-500">{{ post.date | date_to_long_string }}</div>
  </div>
{% endfor %}
